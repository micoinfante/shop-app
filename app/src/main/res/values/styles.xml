<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primary_lightgray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="actionMenuTextColor">@color/primary_black</item>
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
<!--        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>-->
    </style>

    <style name="SekaiActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/accent_white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="actionMenuTextColor">@color/primary_black</item>
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
<!--        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>-->
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="actionMenuTextColor">@color/primary_black</item>

    </style>



    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="titleTextColor">@color/primary_black</item>
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="android:textColor">@color/primary_black</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@color/primary_black</item>
        <item name="android:textColorPrimary">@color/primary_black</item>
        <item name="titleTextStyle">@color/primary_black</item>
        <item name="backgroundColor">@color/primary_lightgray</item>
        <item name="android:background">@color/primary_lightgray</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>